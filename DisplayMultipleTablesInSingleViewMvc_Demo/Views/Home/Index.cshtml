@model DisplayMultipleTablesInSingleViewMvc_Demo.ViewModel.EmployeeViewModel

@{
    ViewBag.Title = "Home";
}

<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">Employees</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu1">Departments</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#menu2">Incentives</a>
    </li>
</ul>
<div class="tab-content">
    <div class="tab-pane container active" id="home">
        <h3 class="text-center text-uppercase">List of Employee</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Position)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Office)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Age)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().StartDate)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Salary)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Department.DepartmentName)</th>
                    <th>@Html.DisplayNameFor(m => m.Employees.FirstOrDefault().Incentive.IncentiveAmount)</th>
                </tr>
            </thead>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Position</td>
                    <td>@employee.Office</td>
                    <td>@employee.Age</td>
                    <td>@employee.StartDate.ToString("dd-MM-yyyy")</td>
                    <td>$ @employee.Salary</td>
                    <td>@employee.Department.DepartmentName</td>
                    <td>$ @employee.Incentive.IncentiveAmount</td>
                </tr>
            }
        </table>
    </div>
    <div class="tab-pane container fade" id="menu1">
        <h3 class="text-center text-uppercase">List of deparments</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Departments.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Departments.FirstOrDefault().DepartmentName)</th>
                </tr>
            </thead>
            @foreach (var employee in Model.Departments)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.DepartmentName</td>
                </tr>
            }
        </table>
    </div>
    <div class="tab-pane container fade" id="menu2">
        <h3 class="text-center text-uppercase">List of Incentive</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Incentives.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Incentives.FirstOrDefault().IncentiveAmount)</th>
                </tr>
            </thead>
            @foreach (var employee in Model.Incentives)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.IncentiveAmount</td>
                </tr>
            }
        </table>
    </div>
</div>